[
  {
    "label": "Run back-end project non-production",
    "command": "cargo run",
    "cwd": "$ZED_WORKTREE_ROOT/vsu-forum-backend",
    "env": { "CONFIG_PATH": "config.dev.toml" },
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
    "shell": "system"
  },
  {
    "label": "Run front-end project non-production",
    "command": "bun dev",
    "cwd": "$ZED_WORKTREE_ROOT/vsu-forum-frontend",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
    "shell": "system"
  },
  {
    "label": "Run formatting",
    "command": "cargo fmt",
    "cwd": "$ZED_WORKTREE_ROOT/vsu-forum-backend",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "never",
    "hide": "on_success",
    "shell": "system"
  }
]
